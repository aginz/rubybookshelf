<h1><%= t(".header")%></h1>

<%= render "books/filter", filter: filter %>

<% if books.any? %>
  <%= link_to("Sort by Title", sort_path("title")) %> |
  <%= link_to("Sort by Date Added", sort_path(Book::SORT_CRITERIA_ADDED)) %>

  <%= render "books/books", books: books %>

  <%= paginate books %>
<% else %>
  <h1><%= t(".no_books_yet") %></h1>
<% end %>
